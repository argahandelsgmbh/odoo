<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_invoice_sale" model="report.paperformat">
        <field name="name">Invoice Sale Paperformat</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">25</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">20</field>
        <field name="margin_right">20</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_invoice_sale_pdf_report" model="ir.actions.report">
        <field name="name">Invoices Report</field>
        <field name="model">invoice.sale.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">daily_invoices_report_pdf.report_invoice_sale_document</field>
        <field name="paperformat_id" ref="paperformat_invoice_sale"/>
    </record>

    <template id="custom_header_footer_invoice_sale">
        <t t-set="company" t-value="res_company"/>
        <div>
        </div>
    </template>

    <template id="report_invoice_sale_document">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <!--                <t t-call="web.external_layout">-->
                <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
                     t-att-data-oe-id="o and o.id">
                    <t t-call="daily_invoices_report_pdf.custom_header_footer_invoice_sale"/>
                    <div class="page">
                        <div class="oe_structure"/>

                        <div class="row mt32 mb32" id="informations">
                            <strong>Date From:</strong>
                            <span class="m-0" t-esc="date_from"/>
                        </div>
                        <div class="row mt32 mb32" id="informations">
                            <strong>Date to:</strong>
                            <span class="m-0" t-esc="date_to"/>
                        </div>
                        <br/>
                        <div class="text-center"><h2>Invoices</h2></div>
                        <t t-set="grand_total_invoice" t-value="0" />
                        <table class="table table-sm" >
                            <thead>
                                <tr>
                                    <th name="th_name" class="text-left"><strong>Invoice Date</strong></th>
                                    <th name="th_qty" class="text-center"><strong>Invoice No</strong></th>
                                    <th name="th_value" class="text-center text-nowrap"><strong>Partner</strong></th>
                                    <th name="th_value" class="text-center text-nowrap"><strong>Total Amount</strong></th>
                                </tr>
                            </thead>
                            <tbody>

                                <t t-foreach="invoices" t-as="invoice">
                                    <tr>
                                        <td class="text-center"><span t-field="invoice.invoice_date"/></td>
                                        <td class="text-center"><span t-field="invoice.name"/></td>
                                        <td class="text-center text-nowrap"><span t-field="invoice.partner_id.name"/></td>
                                        <td class="text-center"><span t-field="invoice.amount_total"/></td>
                                        <t t-set="grand_total_invoice" t-value="grand_total_invoice + invoice.amount_total" />
                                    </tr>
                                </t>
                                <tr style="font-weight:bold;">
                                    <td class="text-center" colspan="3">Grand Total</td>
                                    <td class="text-center"><span t-esc="grand_total_invoice"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <br/>
                        <div class="text-center"><h2>Payments</h2></div>
                        <t t-set="grand_total_paid" t-value="0" />
                        <table class="table table-sm" >
                            <thead>
                                <tr>
                                    <th name="th_name" class="text-center"><strong>Payment No</strong></th>
                                    <th name="th_qty" class="text-center"><strong>Partner</strong></th>
                                    <th name="th_value" class="text-center text-nowrap"><strong>Amount Paid</strong></th>
                                </tr>
                            </thead>
                            <tbody>

                                <t t-foreach="payments" t-as="payment">
                                    <tr>
                                        <td class="text-center"><span t-field="payment.name"/></td>
                                        <td class="text-center text-nowrap"><span t-field="payment.partner_id.name"/></td>
                                        <td class="text-center"><span t-field="payment.amount"/></td>
                                        <t t-set="grand_total_paid" t-value="grand_total_paid + payment.amount" />
                                    </tr>
                                </t>
                                <tr style="font-weight:bold;">
                                    <td class="text-center" colspan="2">Grand Total</td>
                                    <td class="text-center"><span t-esc="grand_total_paid"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <br/>
                        <div class="text-center"><h2>Sale Orders</h2></div>
                        <t t-set="grand_total_advance" t-value="0" />
                        <t t-set="grand_total_sale" t-value="0" />
                        <table class="table table-sm" >
                            <thead>
                                <tr>
                                    <th name="th_name" class="text-center"><strong>Order No</strong></th>
                                    <th name="th_qty" class="text-center"><strong>Customer</strong></th>
                                    <th name="th_qty" class="text-center"><strong>Order Date</strong></th>
                                    <th name="th_value" class="text-center text-nowrap"><strong>Total Amount</strong></th>
                                    <th name="th_value" class="text-center text-nowrap"><strong>Advance Amount</strong></th>
                                </tr>
                            </thead>
                            <tbody>

                                <t t-foreach="orders" t-as="order">
                                    <tr>
                                        <td class="text-center"><span t-field="order.name"/></td>
                                        <td class="text-center text-nowrap"><span t-field="order.partner_id.name"/></td>
                                        <td class="text-center"><span t-field="order.date_order"/></td>
                                        <td class="text-center"><span t-field="order.amount_total"/></td>
                                        <t t-set="advance_amount" t-value="get_order_payment(order)" />
                                        <td class="text-center"><span t-esc="advance_amount"/></td>
                                        <t t-set="grand_total_advance" t-value="grand_total_advance + advance_amount" />
                                        <t t-set="grand_total_sale" t-value="grand_total_sale + order.amount_total" />
                                    </tr>
                                </t>
                                <tr style="font-weight:bold;">
                                    <td class="text-center" colspan="3"> Grand Total</td>
                                    <td class="text-center"><span t-esc="grand_total_sale"/></td>
                                    <td class="text-center"><span t-esc="grand_total_advance"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <p>Difference Between Invoices and Orders: <strong><span t-esc="grand_total_invoice - grand_total_advance"/></strong></p>
                        <p>Difference Between Invoices and Payments:<strong><span t-esc="grand_total_invoice - grand_total_paid"/></strong></p>

                        <div class="oe_structure"/>
                    </div>
                </div>
            </t>
            <!--        </t>-->
        </t>
    </template>

</odoo>
