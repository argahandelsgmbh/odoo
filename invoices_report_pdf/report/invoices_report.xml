<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_stock_report" model="report.paperformat">
        <field name="name">Stock Report</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">25</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">20</field>
        <field name="margin_right">20</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_invoice_pdf_report" model="ir.actions.report">
        <field name="name">Invoices Report</field>
        <field name="model">invoice.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">invoices_report_pdf.report_invoice_document</field>
    </record>

    <template id="report_invoice_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="text-center"><h2>Invoices</h2></div>
                    <div class="row mt32 mb32" id="informations">
                        <strong>Date From:</strong>
                        <span class="m-0" t-esc="date_from"/>
                    </div>
                    <div class="row mt32 mb32" id="informations">
                        <strong>Date to:</strong>
                        <span class="m-0" t-esc="date_to"/>
                    </div>
                    <br/>
                    <table class="table table-sm" >
                        <thead>
                            <tr>
                                <th name="th_name" class="text-left"><strong>Partner</strong></th>
                                <th name="th_qty" class="text-center"><strong>Invoice No</strong></th>
                                <th name="th_value" class="text-center text-nowrap"><strong>Untaxed Amount</strong></th>
                                <th name="th_value" class="text-center text-nowrap"><strong>Tax Amount</strong></th>
                                <th name="th_value" class="text-center"><strong>Total</strong></th>
                                <th name="th_value" class="text-center text-nowrap"><strong>Payment Status</strong></th>
                                <th name="th_value" class="text-center"><strong>Company</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="grand_total_value" t-value="0" />
                            <t t-foreach="invoices" t-as="invoice">
                                <tr>
                                    <td class="text-left text-nowrap">
                                        <span t-field="invoice.partner_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="invoice.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="invoice.amount_untaxed"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="invoice.amount_tax"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="invoice.amount_total"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="invoice.payment_state"/>
                                    </td>
                                    <td class="text-center text-nowrap">
                                        <span t-field="invoice.company_id.name"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>

