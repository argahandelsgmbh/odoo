<odoo>

    <record id="product_invoice_discount_import_form_view" model="ir.ui.view">
        <field name="name">discount.invoice.import.form</field>
        <field name="model">discount.invoice.import</field>
        <field name="arch" type="xml">
            <form string="Report">
                <group col="4">
                    <field name="file_upload"/>
                </group>
                <footer>
                    <button name="action_import_products" string="Import" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="product_invoice_discount_import_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Discount</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">discount.invoice.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_invoice_discount_import_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="product_invoice_discount_import_wizard_root" name="Import Discount" parent="account.menu_finance_reports" action="product_invoice_discount_import_wizard_action" sequence="21"/>


    <record id="product_discount_import_form_view" model="ir.ui.view">
        <field name="name">discount.import.form</field>
        <field name="model">discount.import</field>
        <field name="arch" type="xml">
            <form string="Report">
                <group col="4">
                    <field name="file_upload"/>
                </group>
                <footer>
                    <button name="action_import_products" string="Import" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="product_discount_import_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Discount</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">discount.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_discount_import_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="product_discount_import_wizard_root" name="Import Discount" parent="sale.product_menu_catalog" action="product_discount_import_wizard_action" sequence="21"/>

</odoo>