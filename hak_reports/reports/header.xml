                </div>
            </div>
        </div>
        <div t-attf-class="o_company_#{company.id}_layout article o_report_layout mb4" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
