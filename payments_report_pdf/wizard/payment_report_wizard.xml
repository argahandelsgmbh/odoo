<odoo>


	<record id="view_payment_report_wizard_form" model="ir.ui.view">
		<field name="name">Sale Report wizards</field>
		<field name="model">payment.report.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group col="4">
					<field name="date_from" required="1"/>
					<field name="date_to" required="1"/>
					<field name="company_ids" required="1" widget="many2many_tags"/>
				</group>
				<footer>
					<button name="print_report" string="Apply" type="object" class="btn-primary"/>
					<button  string="Cancel" type="object" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_payment_report_wizard_form" model="ir.actions.act_window">
		<field name="name">Payments Report</field>
		<field name="res_model">payment.report.wizard</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_payment_report_wizard_form"/>
		<field name="target">new</field>
	</record>

	<menuitem id="payment_report_menu_new" action="payments_report_pdf.action_payment_report_wizard_form" name="Payments Report" parent="account.menu_finance_reports" />

</odoo>
