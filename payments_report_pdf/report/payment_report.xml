    <record id="action_payment_pdf_report" model="ir.actions.report">
        <field name="name">Payments Report</field>
        <field name="model">payment.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">payments_report_pdf.report_payment_document</field>
    </record>

    <template id="report_payment_document">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <!--                <t t-call="web.external_layout">-->
                <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
                     t-att-data-oe-id="o and o.id">
                    <t t-call="payments_report_pdf.custom_header_footer_payment"/>
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="text-center"><h2>Payments</h2></div>
                        <div class="row mt32 mb32" id="informations">
                            <strong>Date From:</strong>
                            <span class="m-0" t-esc="date_from"/>
                        </div>
                        <div class="row mt32 mb32" id="informations">
                            <strong>Date to:</strong>
                            <span class="m-0" t-esc="date_to"/>
                        </div>
                        <br/>
                        <table class="table table-sm" >
                            <thead>
                                <tr>
                                    <th name="th_name" class="text-left"><strong>Partner</strong></th>
                                    <th name="th_qty" class="text-center"><strong>Payment No</strong></th>
                                    <th name="th_value" class="text-center text-nowrap"><strong>Amount</strong></th>
                                    <th name="th_value" class="text-center"><strong>Company</strong></th>
                                </tr>
                            </thead>
                            <tbody>

                                <t t-set="total_amount" t-value="0"/>

                                <t t-foreach="payments" t-as="invoice">

                                    <tr>
                                        <td class="text-left text-nowrap">
                                            <span t-field="invoice.partner_id.name"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="invoice.name"/>
                                        </td>

                                        <td class="text-center">
                                            <span t-field="invoice.amount"/>
                                        </td>

                                        <td class="text-center text-nowrap">
                                            <span t-field="invoice.company_id.name"/>
                                        </td>

                                        <t t-set="total_amount" t-value="total_amount + invoice.amount"/>
                                    </tr>
                                </t>
                                <tr style="font-weight:bold;">
                                    <td colspan="2" class="text-center"><strong>Total</strong></td>
                                    <td class="text-center"><span t-esc="total_amount" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>

