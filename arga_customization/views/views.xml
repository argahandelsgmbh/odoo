<odoo>
    <data>

        <record id="repair_order_view_form_inherit" model="ir.ui.view">
            <field name='name'>repair.order.form.inherit</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                     <button name="open_repair_to_rfq_wizard" string="Create RFQ/PO" type="object" attrs="{'invisible': [('state', '!=', 'confirmed')]}" class="oe_highlight"/>
                     <button name="open_repair_to_delivery_wizard" string="Create Delivery" type="object" attrs="{'invisible': [('state', '!=', 'confirmed')]}" class="oe_highlight"/>
                </xpath>

                <div name="button_box" position="inside">
                <button type="object" class="oe_stat_button" icon="fa-truck" name="action_open_delivery">
                    <field string="Delivered" name="delivery_count" widget="statinfo"/>
                </button>
            </div>


            </field>
        </record>

        <record id="helpdesk_ticket_view_form_inherit" model="ir.ui.view">
            <field name='name'>helpdesk.ticket.form.inherit.invoicing</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                  <button string="Create Repair" type="object" name="action_create_repair"  class="oe_highlight"/>
                </xpath>
                 <xpath expr="//field[@name='user_id']" position="after">
                 <field name="product_id"/>
                 <field name="sale_line_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_calendar_event_form_inh" model="ir.ui.view">
            <field name="name">calendar.event.form.inh</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='allday']" position="after">
                    <field name="sale_id" string="Sale" readonly="1"/>
                </xpath>

            </field>
        </record>


        <record id="quotation_inherit_arga_tree" model="ir.ui.view">
            <field name="name">sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="total_qty" optional="show" />
                    <field name="do_qty" optional="show" />
                    <field name="po_qty" optional="show" />
                    <field name="received_qty" optional="show" />
                    <field name="istikabl_qty" optional="show" />
                    <field name="bellona_qty" optional="show" />
                    <field name="do_status" optional="show" widget="badge" decoration-success="do_status == 'done'" decoration-info="do_status not in ('done', 'cancel', 'draft')" decoration-muted="do_status == 'draft'"/>
                    <field name="po_state" optional="show" widget="badge" decoration-success="po_state == 'done'" decoration-info="po_state not in ('done', 'cancel', 'draft')" decoration-muted="po_state == 'draft'"/>
                    <field name="receipt_status" optional="show" widget="badge" decoration-success="receipt_status == 'done'" decoration-info="receipt_status not in ('done', 'cancel', 'draft')" decoration-muted="receipt_status == 'draft'"/>
                </xpath>

            </field>
        </record>

        <record id="sale_order_inherit_arga_tree" model="ir.ui.view">
            <field name="name">sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="total_qty" optional="show" />
                    <field name="do_qty" optional="show" />
                    <field name="po_qty" optional="show" />
                    <field name="received_qty" optional="show" />
                    <field name="istikabl_qty" optional="show" />
                    <field name="bellona_qty" optional="show" />


                    <field name="do_status" optional="show" widget="badge" decoration-success="do_status == 'done'" decoration-info="do_status not in ('done', 'cancel', 'draft')" decoration-muted="do_status == 'draft'"/>
                    <field name="po_state" optional="show" widget="badge" decoration-success="po_state == 'done'" decoration-info="po_state not in ('done', 'cancel', 'draft')" decoration-muted="po_state == 'draft'"/>
                    <field name="receipt_status" optional="show" widget="badge" decoration-success="receipt_status == 'done'" decoration-info="receipt_status not in ('done', 'cancel', 'draft')" decoration-muted="receipt_status == 'draft'"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_inherit_arga" model="ir.ui.view">
            <field name="name">sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='note_group']" position="before">
                    <group>
                        <field name="total_invoice_paid" readonly="1"/>
                        <field name="total_invoice_amount" readonly="1" invisible="1"/>
                        <field name="total_open_amount" readonly="1"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="after">
                    <field name="number" width=".3" class="text-end"/>
                </xpath>


                <xpath expr="//field[@name='order_line']" position="after">
                    <group>
                        <group>
                            <field name="total_qty"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="delivery_date"/>
                </xpath>

<!--                <xpath expr="//header" position="inside">-->
<!--                    <button string="Test" type="object" name="action_create_appoint"/>-->
<!--                </xpath>-->
            </field>
        </record>


        <record id="stock_picking_inherit_arga" model="ir.ui.view">
            <field name="name">stock picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="delivery_date"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="invoice_total"/>
                    <field name="remaining_amt"/>
                </xpath>
            </field>
        </record>


        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_ref" position="after">
                    <field name="sale_order"/>
                    <field name="sale_repair_id"/>
                    <field name="total_lines"/>
                </field>
                <xpath expr="//field[@name='order_line']//tree/field[@name='product_id']" position="before">
                    <field name="number" string="Sr#" class="text-end"/>
                </xpath>
            </field>
        </record>


        <record id="arga_view_sale_project_inherit_form" model="ir.ui.view">
            <field name="name">project.task.view.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="delivery_date"  />
                </xpath>
            </field>
        </record>


        <record id="arga_view_task_kanban_inherited_progress" model="ir.ui.view">
            <field name="name">project.task.timesheet.kanban.inherited.progress</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="arch" type="xml">
                <templates position="before">
                    <field name="delivery_date" />
                </templates>
                <div class="oe_kanban_bottom_left" position="inside">
                    <div t-attf-class="oe_kanban_align badge {{ badge }}" t-att-title="title">
                        <field name="delivery_date" widget="timesheet_uom" />
                    </div>
                </div>
            </field>
        </record>



        <record id="po_quotation_inherit_arga" model="ir.ui.view">
            <field name="name">purchase order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="picking_ids" optional="show" widget="many2many_tags" string="Receipts"/>
                    <field name="receipt_status" optional="show" string="Receipts Status"  widget="badge" decoration-success="receipt_status == 'done'" decoration-info="receipt_status not in ('done', 'cancel', 'draft')" decoration-muted="receipt_status == 'draft'"/>
                    <field name="total_lines" optional="show" />
                    <field name="total_istikbal_lines" optional="show" />
                    <field name="total_bellona_lines" optional="show" />
                    <field name="total_received" optional="show" />
                </xpath>
            </field>
        </record>

        <record id="purchase_order_inherit_arga" model="ir.ui.view">
            <field name="name">purchase order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="picking_ids" optional="show" widget="many2many_tags" string="Receipts"/>
                    <field name="receipt_status" optional="show" string="Receipts status"   widget="badge" decoration-success="receipt_status == 'done'" decoration-info="receipt_status not in ('done', 'cancel', 'draft')" decoration-muted="receipt_status == 'draft'"/>
                    <field name="total_lines" optional="show" />
                    <field name="total_istikbal_lines" optional="show" />
                    <field name="total_bellona_lines" optional="show" />
                    <field name="total_received" optional="show" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
