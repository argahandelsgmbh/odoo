<odoo>
  <data>

     <record id="sale_order_inherit_arga" model="ir.ui.view">
            <field name="name">sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//group[@name='note_group']" position="before">
                    <group>
                        <field name="total_invoice_paid" readonly="1"/>
                        <field name="total_invoice_amount" readonly="1" invisible="1"/>
                        <field name="total_open_amount" readonly="1"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="after">
                        <field name="number"/>
                  </xpath>

                  <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                        <field name="available" string="Available Qty" />
                        <field name="remaining_qty" string="Not Available" invisible="1"/>
                        <field name="qty_in"/>
                        <field name="qty_out"/>
                        <field name="free_qty"/>
                  </xpath>


                <xpath expr="//field[@name='order_line']" position="after">
                    <group>
                    <group>
                    <field name="total_qty" />
                    <field name="remaining_qty"/>
                    </group>
                    </group>
                </xpath>

                        <xpath expr="//field[@name='validity_date']" position="before">
                        <field name="delivery_date"/>
                  </xpath>
            </field>
        </record>


      <record id="stock_picking_inherit_arga" model="ir.ui.view">
            <field name="name">stock picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_deadline']" position="after">
                    <field name="delivery_date"/>
                </xpath>
                 <xpath expr="//field[@name='origin']" position="after">
                    <field name="invoice_total"/>
                    <field name="remaining_amt"/>
                </xpath>
            </field>
        </record>

  </data>
</odoo>
