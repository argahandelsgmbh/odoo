<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="salesforce_setting">
            <field name="name">res.config.settings.otto.market</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app_settings_block" data-string="Otto Matket" string="Otto Matket" data-key="otto_market_integration">
                        <div id="manual-import">
                            <h2>Manual Import Utility</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Import Products' Brands</span>
                                        <span class="fa fa-lg fa-cube" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <div class="text-muted">
                                            Here you will import brands from Otto Market after clicking the button.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <button name="otto_import_brands" string="Import Brands" type="object" class="col-lg-5 o_light_label oe_highlight"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Import Products' Categories</span>
                                        <span class="fa fa-lg fa-cube" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <div class="text-muted">
                                            Here you will import categories from Otto Market after clicking the button.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <button name="otto_import_categories" string="Import Categories" type="object" class="col-lg-5 o_light_label oe_highlight"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Import Products</span>
                                        <span class="fa fa-lg fa-cube" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <div class="text-muted">
                                            Here you will import products from Otto Market after clicking the button.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <button name="otto_import_products" string="Import Products" type="object" class="col-lg-5 o_light_label oe_highlight"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Update Products' QTY</span>
                                        <span class="fa fa-lg fa-cube" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <div class="text-muted">
                                            Here you will update the products quantities from Otto Market after clicking the button.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <button name="otto_update_products_qty" string="Update Quantity" type="object" class="col-lg-5 o_light_label oe_highlight"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Import Orders</span>
                                        <span class="fa fa-lg fa-cube" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <div class="text-muted">
                                            Here you will import the orders from Otto Market after clicking the button.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <button name="otto_import_orders" string="Import Orders" type="object" class="col-lg-5 o_light_label oe_highlight"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6 o_setting_box">
                                    <div class="o_setting_left_pane">
                                    </div>
                                    <div class="o_setting_right_pane">
                                        <span class="o_form_label">Import Shipments</span>
                                        <span class="fa fa-lg fa-cube" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                        <div class="text-muted">
                                            Here you will import the shipments from Otto Market after clicking the button.
                                        </div>
                                        <div class="content-group">
                                            <div class="mt16">
                                                <field name="otto_shipment_date_from" />
                                            </div>
                                            <div class="mt16">
                                                <button name="otto_import_shipments" string="Import Shipments" type="object" class="col-lg-5 o_light_label oe_highlight"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>